<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.toshiba.parkme.BookActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:padding="10dp"
        android:text="DATE :"
        android:textSize="32dp"
        android:id="@+id/date" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/date"
        android:layout_marginStart="44dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/date"
        android:hint="DD/MM/YYYY"
        android:inputType="text"
        android:id="@+id/editDate" />


    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editDate"
        android:layout_below="@+id/date"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="DURATION "
        android:textSize="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dp"
        android:padding="10dp"
        android:text="FROM :"
        android:textSize="32dp"
        android:id="@+id/From" />

    <EditText
        android:id="@+id/editFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editDate"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:hint="HH:MM"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="270dp"
        android:padding="10dp"
        android:text=" TO :"
        android:textSize="32dp"
        android:id="@+id/To" />

    <EditText
        android:id="@+id/editTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editFrom"
        android:layout_below="@+id/editFrom"
        android:hint="HH:MM"
        android:inputType="text" />

    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/To"
        android:layout_marginStart="8dp"
        android:layout_marginTop="41dp"
        android:layout_toEndOf="@+id/To"
        android:text="CHECK AVAILABILITY" />


</RelativeLayout>
